<Window
    x:Class="PxViewer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:PxViewer.ViewModels"
    Title="{Binding Title}"
    Width="1024"
    Height="640"
    d:DataContext="{d:DesignInstance viewModels:DesignTimeMainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <!--  タブ  -->
            <RowDefinition Height="Auto" />

            <!--  サムネ + プレビュー  -->
            <RowDefinition Height="*" />

            <!--  メタデータ  -->
            <RowDefinition Height="180" />
        </Grid.RowDefinitions>

        <!--  タブ（フォルダ単位）  -->
        <TabControl
            Grid.Row="0"
            ItemsSource="{Binding Tabs}"
            SelectedItem="{Binding CurrentTab}">

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding CurrentTab.Folder.Value}" />
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!--  メイン領域：サムネ + プレビュー  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!--  サムネ  -->
                <ColumnDefinition Width="320" />

                <!--  プレビュー  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  サムネ一覧  -->
            <ListBox
                Grid.Column="0"
                ItemsSource="{Binding CurrentTab.Thumbnails}"
                ScrollViewer.CanContentScroll="True"
                SelectedItem="{Binding CurrentTab.SelectedItem}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="2" Padding="4">
                            <Image
                                Width="296"
                                Height="auto"
                                Source="{Binding ThumbnailPath}"
                                Stretch="Uniform" />
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  プレビュー  -->
            <Border
                Grid.Column="1"
                Padding="8"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <Image Source="{Binding CurrentTab.SelectedItem.PreviewSource}" Stretch="Uniform" />
            </Border>
        </Grid>

        <!--  メタデータ  -->
        <ContentControl
            Grid.Row="2"
            Padding="8"
            Content="{Binding CurrentTab.SelectedItemMeta}" />
    </Grid>
</Window>