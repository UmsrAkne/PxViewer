<Window
    x:Class="PxViewer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:PxViewer.ViewModels"
    Title="{Binding Title}"
    Width="1024"
    Height="640"
    d:DataContext="{d:DesignInstance viewModels:DesignTimeMainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Window.InputBindings>
        <KeyBinding
            Key="T"
            Command="{Binding CreateNewTabCommandAsync}"
            Modifiers="Control" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <!--  タブ  -->
            <RowDefinition Height="Auto" />

            <!--  サムネ + プレビュー  -->
            <RowDefinition Height="*" />

            <!--  メタデータ  -->
            <RowDefinition Height="180" />
        </Grid.RowDefinitions>

        <!--  タブ（フォルダ単位）  -->
        <TabControl
            Grid.Row="0"
            ItemsSource="{Binding Tabs}"
            SelectedItem="{Binding CurrentTab}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding CurrentTab.LoadFilesCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate DataType="{x:Type viewModels:TabViewModel}">
                    <Border>
                        <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding ChangeDirectoryAsyncCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Border>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!--  メイン領域：サムネ + プレビュー  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!--  サムネ  -->
                <ColumnDefinition Width="320" />

                <!--  プレビュー  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  サムネ一覧  -->
            <ListBox
                Grid.Column="0"
                ItemsSource="{Binding CurrentTab.Thumbnails}"
                ScrollViewer.CanContentScroll="True"
                SelectedItem="{Binding CurrentTab.SelectedItem}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Border Margin="2" Padding="4">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Loaded">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListBox}, Path=DataContext.CurrentTab.LoadThumbnailsAsyncCommand}" CommandParameter="{Binding}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Image
                                    Width="200"
                                    Height="auto"
                                    Source="{Binding ThumbnailPath, Converter={StaticResource PathToBitmapImageConverter}}"
                                    Stretch="Uniform" />
                            </Border>
                            <TextBlock Text="{Binding FileName}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  プレビュー  -->
            <Border
                Grid.Column="1"
                Padding="8"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <Image Source="{Binding CurrentTab.SelectedItem.Image}" Stretch="Uniform" />
            </Border>
        </Grid>

        <!--  メタデータ  -->
        <ContentControl
            Grid.Row="2"
            Padding="8"
            Content="{Binding CurrentTab.SelectedItemMeta}" />
    </Grid>
</Window>