<Window
    x:Class="PxViewer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:PxViewer.Models"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:viewModels="clr-namespace:PxViewer.ViewModels"
    Title="{Binding Title}"
    Width="1024"
    Height="640"
    d:DataContext="{d:DesignInstance viewModels:DesignTimeMainWindowViewModel}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">

    <Window.InputBindings>
        <KeyBinding
            Key="T"
            Command="{Binding CreateNewTabCommandAsync}"
            Modifiers="Control" />
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <!--  タブ  -->
            <RowDefinition Height="Auto" />

            <!--  サムネ + プレビュー  -->
            <RowDefinition Height="*" />

            <!--  メタデータ  -->
            <RowDefinition Height="180" />
        </Grid.RowDefinitions>

        <!--  タブ（フォルダ単位）  -->
        <TabControl
            Grid.Row="0"
            ItemsSource="{Binding Tabs}"
            SelectedItem="{Binding CurrentTab}">

            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding CurrentTab.LoadFilesCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate DataType="{x:Type viewModels:TabViewModel}">
                    <Border>
                        <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding ChangeDirectoryAsyncCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Border>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

        <!--  メイン領域：サムネ + プレビュー  -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!--  サムネ  -->
                <ColumnDefinition Width="320" />

                <!--  プレビュー  -->
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  サムネ一覧  -->
            <ListBox
                Grid.Column="0"
                AlternationCount="2"
                ItemsSource="{Binding CurrentTab.ImageItemListViewModel.FilteredView}"
                ScrollViewer.CanContentScroll="True"
                SelectedItem="{Binding CurrentTab.SelectedItem}">
                <ListBox.InputBindings>
                    <KeyBinding
                        Key="D0"
                        Command="{Binding CurrentTab.RateImageAsyncCommand}"
                        CommandParameter="{x:Static models:Rating.None}"
                        Modifiers="Control" />

                    <KeyBinding
                        Key="D1"
                        Command="{Binding CurrentTab.RateImageAsyncCommand}"
                        CommandParameter="{x:Static models:Rating.R1}"
                        Modifiers="Control" />

                    <KeyBinding
                        Key="D2"
                        Command="{Binding CurrentTab.RateImageAsyncCommand}"
                        CommandParameter="{x:Static models:Rating.R2}"
                        Modifiers="Control" />

                    <KeyBinding
                        Key="D3"
                        Command="{Binding CurrentTab.RateImageAsyncCommand}"
                        CommandParameter="{x:Static models:Rating.R3}"
                        Modifiers="Control" />

                    <KeyBinding
                        Key="D4"
                        Command="{Binding CurrentTab.RateImageAsyncCommand}"
                        CommandParameter="{x:Static models:Rating.R4}"
                        Modifiers="Control" />

                    <KeyBinding
                        Key="D5"
                        Command="{Binding CurrentTab.RateImageAsyncCommand}"
                        CommandParameter="{x:Static models:Rating.R5}"
                        Modifiers="Control" />
                </ListBox.InputBindings>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Border Margin="2" Padding="4">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Loaded">
                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=ListBox}, Path=DataContext.CurrentTab.LoadThumbnailsAsyncCommand}" CommandParameter="{Binding}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <Image
                                    MaxHeight="80"
                                    Source="{Binding ThumbnailPath, Converter={StaticResource PathToBitmapImageConverter}}"
                                    Stretch="Uniform" />
                            </Border>
                            <TextBlock Margin="6,0,0,6" Text="{Binding FileName}" />
                            <TextBlock Margin="6,0,0,6" Text="{Binding Rating, Converter={StaticResource RatingToStarsConverter}}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Style.Triggers>
                            <Trigger Property="ListBox.AlternationIndex" Value="0">
                                <Setter Property="Background" Value="LightBlue" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <!--  プレビュー  -->
            <Border
                Grid.Column="1"
                Padding="8"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
                <Image Source="{Binding CurrentTab.SelectedItem.Image}" Stretch="Uniform" />
            </Border>
        </Grid>

        <Grid Grid.Row="2" Margin="4">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  メタデータ  -->
            <ScrollViewer Grid.Row="0">
                <ContentControl Content="{Binding CurrentTab.SelectedItemMeta}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentTab.SelectedItemMeta.IsEmpty}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding CurrentTab.SelectedItemMeta.IsEmpty}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                    <ContentControl.ContentTemplate>
                        <DataTemplate DataType="{x:Type models:PngGenerationMetadata}">
                            <StackPanel Margin="8" Orientation="Vertical">

                                <!--  Positive Prompts  -->
                                <TextBlock FontWeight="Bold" Text="Positive Prompts:" />
                                <ItemsControl ItemsSource="{Binding PositivePrompts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="8,0" Text="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>

                                <!--  Negative Prompts  -->
                                <TextBlock
                                    Margin="0,8,0,0"
                                    FontWeight="Bold"
                                    Text="Negative Prompts:" />
                                <ItemsControl ItemsSource="{Binding NegativePrompts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Margin="8,0" Text="{Binding}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>

                                <!--  その他のプロパティ  -->
                                <TextBlock Margin="0,8,0,0" Text="{Binding Steps, StringFormat=Steps: {0}}" />
                                <TextBlock Text="{Binding Sampler, StringFormat=Sampler: {0}}" />
                                <TextBlock Text="{Binding Seed, StringFormat=Seed: {0}}" />
                                <TextBlock Text="{Binding ModelName, StringFormat=Model: {0}}" />
                                <TextBlock Text="{Binding VaeName, StringFormat=VAE: {0}}" />
                                <TextBlock Text="{Binding Version, StringFormat=Version: {0}}" />

                            </StackPanel>
                        </DataTemplate>

                    </ContentControl.ContentTemplate>
                </ContentControl>
            </ScrollViewer>

            <!--  画像の詳細情報を表示するステータスバー  -->
            <StackPanel
                Grid.Row="1"
                Height="Auto"
                Orientation="Horizontal">
                <TextBlock Text="{Binding CurrentTab.SelectedItem.FileName}" />
                <TextBlock Margin="10,0" Text="size :" />
                <TextBlock Text="{Binding CurrentTab.SelectedItem.Entry.Width}" />
                <TextBlock Margin="5,0" Text="x" />
                <TextBlock Text="{Binding CurrentTab.SelectedItem.Entry.Height}" />
            </StackPanel>

        </Grid>
    </Grid>
</Window>